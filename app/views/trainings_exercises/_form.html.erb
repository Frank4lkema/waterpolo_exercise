<%= form_with(model: trainings_exercise, class: "contents") do |form| %>
  <% if trainings_exercise.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(trainings_exercise.errors.count, "error") %> prohibited this trainings_exercise from being saved:</h2>

      <ul>
        <% trainings_exercise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label "Training" %>
    <%= form.collection_select :training_id, Training.order(:trainings_date), :id, :trainings_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
      <%= form.label "Oefening" %>
      <%= form.collection_select :exercise_id, Exercise.order(:title), :id, :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
