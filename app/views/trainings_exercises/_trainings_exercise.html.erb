<div id="<%= dom_id trainings_exercise %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Training:</strong>
    <%= trainings_exercise.training_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Exercise:</strong>
    <%= trainings_exercise.exercise_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this trainings exercise", trainings_exercise, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this trainings exercise', edit_trainings_exercise_path(trainings_exercise), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
